/* 覆盖层 */
.overlay {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.35);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 奖状主体（参考 certificate 样式，适度精简） */
.certificate {
  width: 86%;
  max-width: 640rpx;
  background: linear-gradient(145deg, #FFF9E6, #FFF5F5);
  border: 8rpx solid #FF6B9D;
  border-radius: 30rpx;
  padding: 30rpx;
  position: relative;
  box-shadow: 0 15rpx 30rpx rgba(255,107,157,0.3);
  overflow: hidden;
}

/* 顶部彩虹与装饰 */
.rainbow-top { position: relative; height: 80rpx; margin-bottom: 20rpx; display:flex; align-items:center; justify-content:center; }
.rainbow-arc { position:absolute; top:0; left:50%; transform:translateX(-50%); width:200rpx; height:60rpx; background:linear-gradient(45deg,#FF6B9D,#4ECDC4,#45B7D1,#96CEB4,#FFEAA7,#DDA0DD); border-radius:100rpx 100rpx 0 0; opacity:.8; }
.sun{ position:absolute; top:-10rpx; right:40rpx; font-size:40rpx; }
.clouds{ position:absolute; top:10rpx; left:20rpx; display:flex; gap:20rpx; }
.cloud{ font-size:30rpx; }

.certificate-header { text-align:center; margin-bottom: 36rpx; }
.title-decoration { display:flex; align-items:center; justify-content:center; gap:20rpx; }
.star-left,.star-right{ font-size:40rpx; }
.certificate-title{ font-size:60rpx; font-weight:bold; background:linear-gradient(45deg,#FF6B9D,#4ECDC4); -webkit-background-clip:text; -webkit-text-fill-color:transparent; text-shadow:2rpx 2rpx 5rpx rgba(0,0,0,.1); }

.certificate-content{ margin-bottom: 28rpx; padding: 0 20rpx; }
.recipient{ display:flex; align-items:center; justify-content:center; gap:15rpx; margin-bottom: 24rpx; }
.crown{ font-size:40rpx; }
.name{ font-size:44rpx; font-weight:bold; color:#FF6B9D; }

.achievement{ display:flex; align-items:center; justify-content:center; gap:15rpx; margin-bottom: 28rpx; padding:20rpx; background:linear-gradient(135deg,rgba(255,255,255,.8),rgba(255,255,255,.4)); border-radius:20rpx; border:2rpx solid rgba(255,107,157,.3); }
.achievement-icon{ font-size:36rpx; }
.achievement-text{ font-size:32rpx; color:#333; text-align:center; line-height:1.5; }

.stats-container{ display:flex; justify-content:space-around; gap:20rpx; margin-bottom: 16rpx; flex-wrap:wrap; }
.stat-item{ display:flex; flex-direction:column; align-items:center; padding:18rpx; background:linear-gradient(135deg,#FFE5E5,#E5F3FF); border-radius:20rpx; border:2rpx solid rgba(255,107,157,.2); min-width:140rpx; margin:6rpx; }
.stat-icon{ font-size:40rpx; margin-bottom:8rpx; }
.stat-label{ font-size:24rpx; color:#666; margin-bottom:4rpx; }
.stat-value{ font-size:28rpx; font-weight:bold; color:#FF6B9D; }

.bottom-decoration { margin-top: 8rpx; }
.balloons{ display:flex; justify-content:center; gap:10rpx; font-size:36rpx; }

.certificate-footer { margin-top: 10rpx; }
.footer-content{ display:flex; align-items:center; justify-content:space-between; }
.issuer{ display:flex; align-items:center; gap:8rpx; color:#444; }
.app-icon{ font-size:28rpx; }
.date{ color:#666; }

/* 按钮区 */
.button-group{
  margin-top: 20rpx;
  width: 86%;
  max-width: 640rpx;
  display:flex;
  justify-content:space-between;
  gap: 16rpx;
}
.btn{ flex:1; display:flex; align-items:center; justify-content:center; gap:10rpx; padding:18rpx; border-radius:9999rpx; box-shadow:0 8rpx 18rpx rgba(0,0,0,.12); }
/* 新增三类按钮配色 */
.share{ background: linear-gradient(135deg,#58D3A0,#2CB5A5); color:#fff; }
.return{ background: linear-gradient(135deg,#6EA8FE,#3A7FE0); color:#fff; }
.nickname{ background:#FFD166; color:#333; }
.btn-icon{ font-size:28rpx; }

/* 统计卡片容器：强制一行、等宽、不换行 */
.stats-container {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
  flex-wrap: nowrap;         /* 关键：不换行 */
  align-items: stretch;      /* 拉伸同高 */
}

/* 统计卡片：等宽、等高、内容居中 */
.stat-item {
  flex: 1 1 0;               /* 关键：等分宽度 */
  min-width: 0;              /* 防止内容把宽度撑开 */
  height: 150rpx;            /* 统一高度（可按需微调） */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;   /* 内容垂直居中 */
  padding: 18rpx;
  background: linear-gradient(135deg, #FFE5E5, #E5F3FF);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 107, 157, 0.2);
  margin: 0;                 /* 由容器 gap 控制间距 */
}

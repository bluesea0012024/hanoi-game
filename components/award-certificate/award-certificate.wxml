<view class="overlay" catchtouchmove="true">
  <view class="certificate">
    <!-- 顶部彩虹装饰 -->
    <view class="rainbow-top">
      <view class="rainbow-arc"></view>
      <view class="sun">☀️</view>
      <view class="clouds">
        <view class="cloud">☁️</view>
        <view class="cloud">☁️</view>
      </view>
    </view>

    <!-- 奖状标题 -->
    <view class="certificate-header">
      <view class="title-decoration">
        <view class="star-left">⭐</view>
        <text class="certificate-title">{{title}}</text>
        <view class="star-right">⭐</view>
      </view>
    </view>

    <!-- 奖状内容 -->
    <view class="certificate-content">
      <view class="recipient">
        <view class="crown">👑</view>
        <text class="name">{{nickname}}小朋友</text>
        <view class="crown">👑</view>
      </view>

      <view class="achievement">
        <view class="achievement-icon">🎯</view>
        <text class="achievement-text">{{achievementText}}</text>
        <view class="achievement-icon">🎯</view>
      </view>

      <view class="stats-container">
        <block wx:for="{{stats}}" wx:key="index">
          <view class="stat-item">
            <view class="stat-icon">{{item.icon}}</view>
            <view class="stat-label">{{item.label}}</view>
            <view class="stat-value">{{item.value}}</view>
          </view>
        </block>
      </view>
    </view>

    <!-- 底部装饰 -->
    <view class="bottom-decoration">
      <view class="balloons">
        <view class="balloon">🎈</view>
        <view class="balloon">🎈</view>
        <view class="balloon">🎈</view>
      </view>
    </view>

    <!-- 颁发信息 -->
    <view class="certificate-footer">
      <view class="footer-content">
        <view class="issuer">
          <view class="app-icon">⏰</view>
          <text>{{appName}}</text>
        </view>
        <view class="date">{{date}}</view>
      </view>
    </view>
  </view>

  <view class="button-group">
    <button class="btn primary" bindtap="onPrimary">
      <view class="btn-icon">🏠</view>
      <text>{{primaryText}}</text>
    </button>
    <button class="btn secondary" bindtap="onSecondary">
      <view class="btn-icon">🎮</view>
      <text>{{secondaryText}}</text>
    </button>
    <button wx:if="{{showNicknameButton}}" class="btn nickname" bindtap="onNickname">
      <view class="btn-icon">✏️</view>
      <text>{{nicknameButtonText}}</text>
    </button>
  </view>
</view>

<view class="button-group">
  <!-- 分享：open-type=share 触发页面 onShareAppMessage -->
  <button class="btn share" open-type="share" bindtap="onShareTap">
    <view class="btn-icon">📤</view>
    <text>{{shareText}}</text>
  </button>
  <!-- 返回首页 -->
  <button class="btn return" bindtap="onReturn">
    <view class="btn-icon">🏠</view>
    <text>{{returnText}}</text>
  </button>
  <!-- 修改昵称 -->
  <button class="btn nickname" bindtap="onNickname">
    <view class="btn-icon">✏️</view>
    <text>{{nicknameText}}</text>
  </button>
</view>